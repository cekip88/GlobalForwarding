extends template/main
append vars
  -
    page_title= 'Ui kit'
block content
    .ui
        section
            h2.ui-title.h2-title Buttons
            ul.ui-buttons
                li.ui-button
                    span Active
                    button.btn-big.orange Get quote
                    button.btn.blue Submit
                    button.link.blue-light #[strong +] Add new item
                li.ui-button
                    span Disabled
                    button.btn-big(disabled='true') Get quote
                    button.btn(disabled='true') Submit
                    button.link.gray(disabled='true') #[strong +] Add new item

        section
            h2.ui-title.h2-title Checkboxes & Radiobuttons
            .ui-checksradios
                ul.ui-checkboxes
                    li.ui-checkbox.checkbox
                        input(type='checkbox').checkbox-input#check1
                        label(for='check1').checkbox-label
                            .checkbox-img
                                +img('../img/checkbox-img.png')
                            span.checkbox-text Default
                    li.ui-checkbox.checkbox
                        input(type='checkbox' checked='true').checkbox-input#check2
                        label(for='check2').checkbox-label
                            .checkbox-img
                                +img('../img/checkbox-img.png')
                            span.checkbox-text Checked
                    li.ui-checkbox.checkbox.checkbox-disabled
                        input(type='checkbox' disabled='true').radio-input#check3
                        label(for='check3').radio-label
                            .checkbox-img
                                +img('../../img/checkbox-img.png')
                            span.checkbox-text Disabled
                ul.ui-radios
                    li.ui-radio.radio
                        input(type='radio' name='radio').radio-input#radio1
                        label(for='radio1').radio-label
                            .radio-img
                            span.radio-text Default
                    li.ui-radio.radio
                        input(type='radio' name='radio' checked='true').radio-input#radio2
                        label(for='radio2').radio-label
                            .radio-img
                            span.radio-text Checked
                    li.ui-radio.radio.radio-disabled
                        input(type='radio' name='radio' disabled='true').radio-input#radio3
                        label(for='radio3').radio-label
                            .radio-img
                            span.radio-text Disabled
            .ui-fieldsdropdown
                .ui-side
                    h2.ui-title.h2-title Fields
                    ul.ui-fields
                        li.ui-field
                            span Normal
                            .input
                                .input-row
                                    input(type='text').input-text
                                span.input-error-text This field is required
                        li.ui-field
                            span Error
                            .input.input-error
                                .input-row
                                    input(type='text' value='44as').input-text
                                span.input-error-text This field is required
                        li.ui-field
                            span Disabled
                            .input.input-disabled
                                .input-row
                                    input(type='text' disabled).input-text
                                span.input-error-text This field is required
                .ui-side
                    h2.ui-title.h2-title Dropdown
                    ul.ui-dropdowns
                        li.ui-dropdown
                            span Normal
                            .dropdown
                                .dropdown-head(data-click-target='dropdown-head')
                                    input(type='text' value='00')
                                input(type='hidden').dropdown-input
                                .dropdown-body
                                    button.dropdown-body-value(data-click-target='dropdown-value') 50
                                    button.dropdown-body-value(data-click-target='dropdown-value') 55
                                    button.dropdown-body-value(data-click-target='dropdown-value') 70
                                    button.dropdown-body-value(data-click-target='dropdown-value') 77.5
                                    button.dropdown-body-value(data-click-target='dropdown-value') 80
                                    button.dropdown-body-value(data-click-target='dropdown-value') 90
                        li.ui-dropdown
                            span Disabled
                            .dropdown.dropdown-disabled
                                .dropdown-head(data-click-target='dropdown-head')
                                    input(type='text' value='00' disabled=true)
                                input(type='hidden').dropdown-input
                                .dropdown-body
                                    button.dropdown-body-value(data-click-target='dropdown-value') 50
                                    button.dropdown-body-value(data-click-target='dropdown-value') 55
                                    button.dropdown-body-value(data-click-target='dropdown-value') 70
                                    button.dropdown-body-value(data-click-target='dropdown-value') 77.5
            .ui-iconsTabs
                .ui-side
                    h2.ui-title.h2-title Icons
                    ul.ui-icons
                        li.ui-icon
                            span Active
                            button.icon-btn
                                include ../img/i.svg
                            button.icon-btn
                                include ../img/xo.svg
                            button.icon-btn
                                include ../img/x.svg
                .ui-side
                    h2.ui-title.h2-title Tabs
                    ul.ui-tabs
                        li.ui-tab
                            span Active
                        li.ui-tab
                            .tab
                                input(type='radio' name='post' checked='true')#pos-1
                                input(type='radio' name='post')#pos-2
                                input(type='radio' name='post')#pos-3
                                input(type='radio' name='post')#pos-4
                                input(type='radio' name='post')#pos-5
                                .tab-controll
                                    label(for='pos-1' data-click-target='tab-btn').tab-btn.tab-btn-active
                                        div
                                            include ../img/track.svg
                                            span.tab-btn-text LTL
                                    label(for='pos-2' data-click-target='tab-btn').tab-btn
                                        div
                                            include ../img/track-big.svg
                                            span.tab-btn-text FTL
                                    label(for='pos-3' data-click-target='tab-btn').tab-btn
                                        div
                                            include ../img/gift.svg
                                            span.tab-btn-text Small Parcel
                                    label(for='pos-4' data-click-target='tab-btn').tab-btn
                                        div
                                            include ../img/boxes.svg
                                            span.tab-btn-text LCL
                                    label(for='pos-5' data-click-target='tab-btn').tab-btn
                                        div
                                            include ../img/crane.svg
                                            span.tab-btn-text FCL

        .ui-quotes.quotes
            section
                h2.ui-title.h2-title Main scree tabs and fields
                form.tab
                    input(type='radio' name='delivery')#del-1
                    input(type='radio' name='delivery' checked='true')#del-2
                    input(type='radio' name='delivery')#del-3
                    input(type='radio' name='delivery')#del-4
                    input(type='radio' name='delivery')#del-5
                    .tab-controll
                        label(for='del-1' data-click-target='tab-btn').tab-btn
                            div
                                include ../img/track.svg
                                span.tab-btn-text LTL
                        label(for='del-2' data-click-target='tab-btn').tab-btn.tab-btn-active
                            div
                                include ../img/track-big.svg
                                span.tab-btn-text FTL
                        label(for='del-3' data-click-target='tab-btn').tab-btn
                            div
                                include ../img/gift.svg
                                span.tab-btn-text Small Parcel
                        label(for='del-4' data-click-target='tab-btn').tab-btn
                            div
                                include ../img/boxes.svg
                                span.tab-btn-text LCL
                        label(for='del-5' data-click-target='tab-btn').tab-btn
                            div
                                include ../img/crane.svg
                                span.tab-btn-text FCL
                    .tab-block
                        .tab-block-item
                            .dropdown
                                button.dropdown-head(data-click-target='dropdown-head')
                                    include ../img/address.svg
                                    span.dropdown-head-value Select city or zip
                                input(type='hidden').dropdown-input
                                .dropdown-body
                                    button.dropdown-body-value(data-click-target='dropdown-value') Ukraine, Kiev
                                    button.dropdown-body-value(data-click-target='dropdown-value') Ukraine, Odessa
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, Texas
                                    button.dropdown-body-value(data-click-target='dropdown-value') Canada, Toronto
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, New York
                                    button.dropdown-body-value(data-click-target='dropdown-value') Ukraine, Odessa
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, Texas
                                    button.dropdown-body-value(data-click-target='dropdown-value') Canada, Toronto
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, New York
                        .tab-block-item
                            .dropdown.dropdown-active
                                button.dropdown-head(data-click-target='dropdown-head')
                                    include ../img/address-marker.svg
                                    span.dropdown-head-value Select city or zip
                                input(type='hidden').dropdown-input
                                .dropdown-body
                                    button.dropdown-body-value(data-click-target='dropdown-value') Ukraine, Odessa
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, Texas
                                    button.dropdown-body-value(data-click-target='dropdown-value') Canada, Toronto
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, New York
                                    button.dropdown-body-value(data-click-target='dropdown-value') Ukraine, Odessa
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, Texas
                                    button.dropdown-body-value(data-click-target='dropdown-value') Canada, Toronto
                                    button.dropdown-body-value(data-click-target='dropdown-value') USA, New York
                        .tab-block-item
                            .input
                                .input-row.input-row-img
                                    include ../img/weight.svg
                                    input(type='text' placeholder='Parcel weight in kg').input-text
                                span.input-error-text This field is required
                        button(type='button').btn-big.orange Get quote



